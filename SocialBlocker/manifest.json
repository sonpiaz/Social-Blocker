{
  "manifest_version": 3,
  "name": "Social Blocker with Toggle",
  "version": "1.0",
  "description": // "Chặn truy cập các trang mạng xã hội với tùy chọn bật/tắt.",
  "permissions": [
    "declarativeNetRequest", //Cho phép sử dụng các yêu cầu mạng để chặn truy cập
    "storage", //Cho phép lưu trữ trạng thái chặn của người dùng
    "alarms" // Cho phép sử dụng báo thức để tự động bật lại chặn sau 5 phút
  ],
  "host_permissions": [
    "*://*.facebook.com/*",
    "*://*.instagram.com/*",
    "*://*.twitter.com/*",
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js" // Tập tin xử lý các tác vụ chạy ngầm
  },
  "action": {
    "default_popup": "popup.html" // Tập tin giao diện khi người dùng nhấn vào biểu tượng extension
  },
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "block_rules",
        "enabled": true,
        "path": "rules.json" // Đường dẫn tới tập tin quy tắc chặn
      }
    ]
  }
}
